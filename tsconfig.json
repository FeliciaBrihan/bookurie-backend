{
	"compilerOptions": {
		"module": "commonjs",
		"esModuleInterop": true,
		"target": "es6",
		"allowJs": true,
		"noImplicitAny": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "dist",
		"experimentalDecorators": true,
		"resolveJsonModule": true,
		"baseUrl": "./",
		"paths": {
			"src": ["src/*"]
		}
	},
	"include": ["src/**/*"],
	"exclude": ["dist", "node_modules"]
}
